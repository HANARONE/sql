(SELECT TO_CHAR(SALES_DATE, 'YYYY-MM-DD'), 
PRODUCT_ID, 
NULL AS USER_ID,   -- 오프라인 테이블에는 USER_ID가 없기 때문에 문제에 따라 NULL AS를 사용해서 NULL로 처리함
SALES_AMOUNT 
FROM OFFLINE_SALE 
WHERE TO_CHAR(SALES_DATE, 'YYYY-MM') = '2022-03')

UNION ALL

(SELECT TO_CHAR(SALES_DATE, 'YYYY-MM-DD'), 
PRODUCT_ID, 
USER_ID, 
SALES_AMOUNT 
FROM ONLINE_SALE 
WHERE TO_CHAR(SALES_DATE, 'YYYY-MM') = '2022-03')

ORDER BY 1,2,3

-- 처음에 조인으로 풀어야 한다고 생각했는데 각 테이블에서 22년 3월의 판매 데이터를 모두 출력하라고 했으니 UNION ALL을 사용해야 함
